{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "strict": true,
    "baseUrl": "./src",
    "sourceMap": true,
    "rootDir": "src",
    "outDir": "dist",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["DOM", "ESNext"],
    "paths": {
      "@api/*": ["src/api/*"],
      "@services/*": ["src/services/*"]
    },
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  }
}
